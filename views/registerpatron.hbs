{{>head}}
<title>Company | Register</title>
{{>navbar}}
<div class="container">
    <div class="card my-2 text-center heading fs-3" style="padding: 1px !important;">
        <div class="card-body">
            Register as Patron
        </div>
    </div>
    <form>
        <div class="row">
            <div class="mb-3 col-md-6">
                <label class="form-label">First Name</label>
                <input type="text" class="form-control" id="firstname" name="firstname">
            </div>
            <div class="mb-3 col-md-6">
                <label class="form-label">Last Name</label>
                <input type="text" class="form-control" id="lastname" name="lastname">
            </div>
        </div>
        <div class="row">
            <div class="mb-3 col-md-2">
                <label class="form-label">Age</label>
                <input type="text" class="form-control" id="age" name="age">
            </div>
            <div class="mb-3 col-md-2">
                <label class="form-label">Gender</label>
                <input type="text" class="form-control" id="gender" name="gender">
            </div>
            <div class="mb-3 col-md-4">
                <label class="form-label">Phone</label>
                <input type="eamil" class="form-control" id="phone" name="phone">
            </div>
            <div class="mb-3 col-md-4">
                <label class="form-label">Email</label>
                <input type="eamil" class="form-control" id="email" name="email">
            </div>
        </div>
        <div class="row">
            <div class="mb-3 col-md-6">
                <label class="form-label">Username</label>
                <input type="email" class="form-control" id="username" name="username">
            </div>
            <div class="mb-3 col-md-6">
                <label class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password">
            </div>
        </div>
        <div class="row">
            <div class="mb-3 col-md-12">
                <div class="mb-3">
                    <label class="form-label">Attach your Profile Photo</label>
                    <input class="form-control " type="file" id="photo">
                </div>
            </div>
        </div>

    </form>
    <button type="submit" class="btn heading">Register</button>
    </form>
</div>
{{>footer}}