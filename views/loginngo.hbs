{{>head}}
<title>Company | Login</title>
{{>navbar}}
<div class="container">
    <div class="card my-2 text-center heading fs-3" style="padding: 1px !important;">
        <div class="card-body">
            Login as NGO
        </div>
    </div>
    <form method="post">
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label textcolor2">Username</label>
            <input type="email" class="form-control textcolor2" id="username" name="username" placeholder="Enter Username">
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label textcolor2">Password</label>
            <input type="password" class="form-control textcolor2" id="password" name="password" placeholder="Enter Password">
        </div>
        <button type="submit" class="btn heading">Login</button>
    </form>
</div>
{{>footer}}